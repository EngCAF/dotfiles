# Global Settings
sudo yabai --load-sa
yabai -m config layout bsp                # Binary space partitioning (tiling)
yabai -m config window_placement second_child
yabai -m config focus_follows_mouse autofocus # Mouse moves focus without clicking

# Padding and Gaps
yabai -m config top_padding    1
yabai -m config bottom_padding 1
yabai -m config left_padding   1
yabai -m config right_padding  1
yabai -m config window_gap     1

# UI Settings
yabai -m config window_shadow  on
yabai -m config window_opacity on
yabai -m config active_window_opacity 1.0
yabai -m config normal_window_opacity 0.9


